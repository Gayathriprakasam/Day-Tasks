#include<stdio.h>
int main()
{
int row,col,num;
printf("Enter number: ");
scanf("%d",&num);
for(row=0;row<=num;row++)
{
 printf("\n");
 for(col=0;col<=num;col++)
    if(row==num||col==0||row==col)
 {
     printf("*");
}
else
{
printf(" ");
}
 }
}


output:
Enter number: 7

*
**
* *
*  *
*   *
*    *
*     *
********
